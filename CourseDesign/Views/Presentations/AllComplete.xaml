<UserControl
    x:Class="CourseDesign.Views.Presentations.AllComplete"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:local="clr-namespace:CourseDesign.Views.Presentations"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid x:Name="nothing_presentation">
            <Border
                Margin="20"
                Background="{DynamicResource MaterialDesignBackground}"
                Opacity="0.3" />
            <StackPanel VerticalAlignment="Center">
                <Image
                    Width="300"
                    Height="300"
                    Margin="0,-120,0,0"
                    gif:ImageBehavior.AnimatedSource="\Assets\Gifs\AllComplete.gif" />
                <TextBlock
                    Margin="0,-20,0,0"
                    HorizontalAlignment="Center"
                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                    Text="你已经完成所有计划啦！ヾ(≧ ▽ ≦)ゝ ……" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
